<p id="notice"><%= notice %></p>

<h1>Codes</h1>

<%= link_to 'Crear Codigo', new_code_path %>
<%= link_to 'Validar', validate_path %>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Email</th>
      <th>Code</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @codes.each do |code| %>
      <tr>
        <td><%= code.amount %></td>
        <td><%= code.email %></td>
        <td><%= code.code %></td>
        <td><%= code.status %></td>
        <td><%= link_to 'Show', code %></td>
        <td><%= link_to 'Edit', edit_code_path(code) %></td>
        <td><%= link_to 'Destroy', code, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
